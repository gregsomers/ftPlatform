{% extends 'FreelancerToolsCoreBundle::layout.html.twig' %}
{% block body %}
    <div class="box">
        <div class="title">
            Edit Client
        </div>
        <div class="content">
            <form class="form-horizontal" action="{{path('customer_submit', {'id':customer.id})}}" method="POST">        
                {{ form_row(form.name, { 'style': 'horizontal' }) }}   
                {{ form_row(form.alias, { 'style': 'horizontal' }) }}    

                {{ form_row(form.address, { 'style': 'horizontal' }) }}    
                {{ form_row(form.contact, { 'style': 'horizontal' }) }}   
                {{ form_row(form.phoneNumber, { 'style': 'horizontal' }) }}    
                {{ form_row(form.emailAddress, { 'style': 'horizontal' }) }}     

                {{ form_widget(form._token) }}

                <div class="form-actions">
                    <div class="row">
                        <div class="col-sm-offset-2 col-sm-10"> 
                            <button class="btn btn-default btn-lg" type="submit"><span class="glyphicon glyphicon-floppy-disk"> Save</button>                        
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

