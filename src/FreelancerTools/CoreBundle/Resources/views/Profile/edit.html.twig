{% extends "FreelancerToolsCoreBundle::layout.html.twig" %}
{% block body %}
    <h1>
        Edit Profile
    </h1>
    {% trans_default_domain 'FOSUserBundle' %} 
    <form class="form-horizontal" action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
        {{ form_start(form, { 'style': 'horizontal' }) }}
        {{ form_widget(form) }}
        <div class="form-actions">
            <div class="row">
                <div class="col-sm-offset-2 col-sm-10"> 
                    <input class="btn btn-primary" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                </div>
            </div>
        </div>        
    </form>
{% endblock body %}